@model DoAn.Models.Product
@{
    ViewBag.Title = @Model.Product_Name ;
    Layout = "~/Views/Shared/MasterLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Assets/CSS/ProductsCSS.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/eaf1554704.js" crossorigin="anonymous"></script>
</head>
<body>
    <main>
        <div class="breadcrumb-shop">
            <div class="container">
                <div class="d-inline-block">
                    <a href="#">
                        <span>Trang chủ</span>
                    </a>
                    <i class="fa fa-solid fa-angles-right"></i>
                    <a href="#">
                        <span>KHO TÀNG SÁCH</span>
                    </a>
                    <i class="fa fa-solid fa-angles-right"></i>
                    <a href="#">
                        <span>KHO TÀNG SÁCH</span>
                    </a>
                    <i class="fa fa-solid fa-angles-right"></i>
                    <a href="#">
                        <span>SÁCH TÂM LÝ - KỸ NĂNG SỐNG</span>
                    </a>
                    <i class="fa fa-solid fa-angles-right"></i>
                    <a href="#">
                        <span>Sách Kỹ Năng Sống</span>
                    </a>
                    <i class="fa fa-solid fa-angles-right"></i>
                    <span>Chủ Động Trong Thế Giới Bị Động</span>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-9">
                    <div class="row">
                        <div class="col-5">
                            <div class="product-media position-relative">
                                @if (Model.Product_Discout != null)
                                {
                                    <p class="p-sale primary-color">
                                        @Model.Product_Discout
                                    </p>
                                }
                                <div class="product-full-img">
                                    <img src="~/AppData/Img/Products/@Model.Product_Image" />
                                </div>
                            </div>
                        </div>
                        <div class="product-detail col-7">
                            <h1></h1>
                            <p class="sku">
                                <strong>SKU: </strong>@Model.Product_SKU
                            </p>
                            <p>
                                <strong>LOẠI SẢN PHẨM:</strong> @Model.Category.Cate_Name
                            </p>
                            <div class="product-price">
                                @if (Model.Product_NewPrice != null)
                                {
                                    <span>@string.Format("{0:#,0}", Model.Product_NewPrice)₫</span>
                                }
                                @if (Model.Product_OldPrice != null)
                                {
                                    <del>@string.Format("{0:#,0}", Model.Product_OldPrice)₫</del>
                                }
                            </div>
                        </div>
                        <div class="product-des col-12 border border-1"
                             style="margin: 15px 10px">
                            <div class="border border-1"
                                 style="margin-left: -10.5px">
                                <div class="tab-title-content">
                                    <p>
                                        Mô tả sản phẩm
                                    </p>
                                </div>
                            </div>
                            <div class="tab-content"
                                 style="padding: 15px 20px">
                                <div class="product-des-content">
                                    <h3 style="font-size: 20px"
                                        class="mt-3 fw-bold">
                                        Thông tin chi tiết
                                    </h3>
                                    <p style="text-align: justify; margin-bottom: 10px">Thông tin sản phẩm</p>
                                    <table border="1" cellspacing="1" cellpadding="1"
                                           style="width: 100%;
                                                  border: 1px solid #ddd;
                                                  margin-bottom: 15px;">
                                        <tbody>
                                            @if (Model.Product_SKU != null)
                                            {
                                                <tr>
                                                    <td style="text-align:justify">Mã hàng</td>
                                                    <td style="text-align:justify">@Model.Product_SKU</td>
                                                </tr>
                                            }
                                            @if (Model.Product_SupplierID != null)
                                            {
                                                <tr>
                                                    <td style="text-align:justify">Tên Nhà Cung Cấp</td>
                                                    <td style="text-align:justify">@Model.Supplier.Supplier_Name</td>
                                                </tr>
                                            }
                                            @if (Model.Product_AuthorID != null)
                                            {
                                                <tr>
                                                    <td style="text-align:justify">Tác giả</td>
                                                    <td style="text-align:justify">@Model.Author.Author_Name</td>
                                                </tr>
                                            }

                                            @if (Model.Product_Translator != null)
                                            {
                                                <tr>
                                                    <td style="text-align:justify">Người Dịch</td>
                                                    <td style="text-align:justify">@Model.Translator.Translator_Name</td>
                                                </tr>
                                            }
                                            @if (Model.Product_PublisherID != null)
                                            {
                                                <tr>
                                                    <td style="text-align:justify">NXB</td>
                                                    <td style="text-align:justify">@Model.Publisher.Publisher_Name</td>
                                                </tr>
                                            }
                                            @if (Model.Product_YearOfPublish != null)
                                            {
                                                <tr>
                                                    <td style="text-align:justify">Năm XB</td>
                                                    <td style="text-align:justify">@Model.Product_YearOfPublish</td>
                                                </tr>
                                            }
                                            @if (Model.Product_Language != null)
                                            {
                                                <tr>
                                                    <td style="text-align:justify">Ngôn Ngữ</td>
                                                    <td style="text-align:justify">@Model.Product_Language</td>
                                                </tr>
                                            }
                                            @if (Model.Product_Weight != null)
                                            {
                                                <tr>
                                                    <td style="text-align:justify">Trọng lượng (gr)</td>
                                                    <td style="text-align:justify">@Model.Product_Weight</td>
                                                </tr>
                                            }
                                            @if (Model.Product_Size != null)
                                            {
                                                <tr>
                                                    <td style="text-align:justify">Kích Thước Bao Bì</td>
                                                    <td style="text-align:justify">@Model.Product_Size</td>
                                                </tr>
                                            }
                                            @if (Model.Product_NumOfPage != null)
                                            {
                                                <tr>
                                                    <td style="text-align:justify">Số trang</td>
                                                    <td style="text-align:justify">@Model.Product_NumOfPage</td>
                                                </tr>
                                            }
                                            @if (Model.Product_Form != null)
                                            {
                                                <tr>
                                                    <td style="text-align:justify">Hình thức</td>
                                                    <td style="text-align:justify">@Model.Product_Form</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <p style="text-align: justify;">@Model.Product_Des</p>
                                <p style="text-align: justify; padding-top: 8px">
                                    <span style="color: #e74c3c">
                                        <strong>
                                            Chính sách khuyến mãi trên Nhanvan.vn không áp dụng cho Hệ thống Nhà sách Nhân Văn trên toàn quốc
                                        </strong>
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-3">

                </div>
            </div>
        </div>
    </main>

</body>
</html>

