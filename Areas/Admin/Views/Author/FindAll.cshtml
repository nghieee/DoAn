@model IEnumerable<DoAn.Models.Author>

@{
    ViewBag.Title = "Danh sách tác giả";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 fw-bold"
            style="float: left;
                   color: #4e73df;
                   font-size: 16px">
            Danh sách danh mục sản phẩm
        </h6>
        <a href="~/Admin/Author/AddNew"
           style="float: right;
                  color: #4e73df">
            Thêm mới
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table">
                <tr>
                    <th style="text-align: center">ID</th>
                    <th>
                        Tên tác giả
                    </th>
                    <th style="text-align: right;">Thao tác</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td style="text-align: center">@item.Author_ID</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Author_Name)
                        </td>
                        <td style="text-align: right">
                            <a href="~/Admin/Author/Update?Author_ID=@item.Author_ID">Update</a> |
                            <a href="~/Admin/Author/Delete?Author_ID=@item.Author_ID">Delete</a>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
