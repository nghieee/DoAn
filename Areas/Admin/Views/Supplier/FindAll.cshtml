@model IEnumerable<DoAn.Models.Supplier>

@{
    ViewBag.Title = "Danh sách các nhà cung cấp";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 fw-bold"
            style="float: left;
                   color: #4e73df;
                   font-size: 16px">
            Danh sách các nhà cung cấp
        </h6>
        <a href="~/Admin/Supplier/AddNew"
           style="float: right;
                  color: #4e73df">
            Thêm mới
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table">
                <tr>
                    <th>ID</th>
                    <th>
                        Tên nhà cung cấp
                    </th>
                    <th>
                        Email nhà cung cấp
                    </th>
                    <th>
                        SĐT nhà cung cấp
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Supplier_ID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Supplier_Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Supplier_Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Supplier_Phone)
                        </td>
                        <td style="text-align: right">
                            <a href="~/Admin/Supplier/Update?Supplier_ID=@item.Supplier_ID">Update</a> |
                            <a href="~/Admin/Supplier/Delete?Supplier_ID=@item.Supplier_ID">Delete</a>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>