<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Assets/Admin/AdminLayoutCSS.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/eaf1554704.js" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <div class="row">
            <div class="col-2">
                <ul class="wrapper navbar-nav bg-primary-color"
                    style="height: 732px; position: sticky; top: 0;">
                    <a href="" class="logo">
                        <img style="margin-left: 12px" src="~/Areas/Admin/Data/Img/hd_page-logo.png" />
                    </a>
                    <hr class="sidebar-divider my-0">
                    <li class="nav-item p-8 active">
                        <a href="#" class="nav-link">
                            <i class="fa fa-solid fa-chart-line fa-beat opacity-100"></i>
                            <span class="fw-bold">Dashboard</span>
                        </a>
                    </li>
                    <hr class="sidebar-divider my-0">
                    <li class="nav-item p-8">
                        <a href="~/Admin/Category/FindAll" class="nav-link">
                            <i class="fa fa-solid fa-tags fa-beat"></i>
                            <span>Loại sản phẩm</span>
                        </a>
                    </li>
                    <li class="nav-item p-8">
                        <a href="~/Admin/Product/FindAll" class="nav-link">
                            <i class="fa fa-solid fa-tags fa-beat"></i>
                            <span>Sản phẩm</span>
                        </a>
                    </li>
                    <hr class="sidebar-divider my-0">
                    <li class="nav-item p-8">
                        <a href="~/Admin/Order/FindAll" class="nav-link">
                            <i class="fa fa-solid fa-tags fa-beat"></i>
                            <span>Đơn hàng</span>
                        </a>
                    </li>
                    <hr class="sidebar-divider my-0">
                    <li class="nav-item p-8">
                        <a href="#" class="nav-link">
                            <i class="fa fa-solid fa-tags fa-beat"></i>
                            <span>Nhà cung cấp</span>
                        </a>
                    </li>
                    <hr class="sidebar-divider my-0">
                    <li class="nav-item p-8">
                        <a href="~/Admin/Customer/FindAll" class="nav-link">
                            <i class="fa fa-solid fa-tags fa-beat"></i>
                            <span>Khách hàng</span>
                        </a>
                    </li>
                    <li class="nav-item p-8 pb-3 position-absolute bottom-0">
                        <hr class="sidebar-divider my-0">
                        <a href="~/Admin/Customer/FindAll" class="nav-link">
                            <i class="fa fa-solid fa-tags fa-beat"></i>
                            <span>Tài khoản</span>
                        </a>
                        <hr class="sidebar-divider my-0">
                    </li>
                </ul>
            </div>

            <div class="col-9 mt-5">
                @RenderBody()
            </div>
        </div>
    </header>
</body>
</html>

