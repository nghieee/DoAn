@model DoAn.Models.Customer

@{
    ViewBag.Title = "Cập nhật khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 fw-bold"
            style="float: left;
                   color: #4e73df;
                   font-size: 16px">
            Cập nhật khách hàng
        </h6>
        <a href="~/Admin/Customer/FindAll"
           style="float: right;
                  color: #4e73df">
            Quay lại
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Cus_ID)

                    <div class="form-group">
                        <label class="col-md-2 control-label">Trạng thái người dùng: </label>
                        <div class="col-md-10">
                            <select class="form-control" name="Cus_Status">
                                <option value="true">Đang hoạt động</option>
                                <option value="false">Đã bị khóa</option>
                                <option value=null>Chưa kích hoạt</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10 pt-3">
                            <input type="submit" value="Lưu thông tin đơn hàng" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
